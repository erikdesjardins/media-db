{
	"manifest_version": 2,
	"name": "media-db",
	"short_name": "mdb",
	"description": "{{prop?description!../package.json}}",
	"version": "{{prop?version!../package.json}}",
	"minimum_chrome_version": "49",
	"permissions": [
		"storage",
		"unlimitedStorage"
	],
	"icons": {},
	"background": {
		"scripts": [
			"{{./pages/background.entry.js}}"
		],
		"persistent": false
	},
	"content_scripts": [
		"{{./pages/content.entry.js}}"
	],
	"page_action": {
		"default_icon": {},
		"default_popup": "{{./html/popup.html}}"
	},
	"index": "{{./html/index.html}}"
}
