{
	"parser": "babel-eslint",
	"plugins": [
		"babel",
		"react",
		"no-useless-assign",
		"consistent-return-legacy",
		"prefer-bind-operator",
		"prefer-spread",
		"sort-imports-es6",
		"filenames",
		"import"
	],
	"settings": {
		"import/ignore": [
			"node_modules",
			"\\.(json|png|html|scss)$"
		],
		"import/resolver": "webpack"
	},
	"env": {
		"browser": true,
		"webextensions": true,
		"node": true,
		"es6": true
	},
	"extends": ["eslint:all", "plugin:react/all"],
	"rules": {
		"babel/generator-star-spacing": [2, { "before": false, "after": true }],
		"babel/new-cap": 2,
		"babel/array-bracket-spacing": 2,
		"babel/object-curly-spacing": [2, "always"],
		"babel/object-shorthand": 2,
		"babel/arrow-parens": [2, "as-needed"],
		"babel/no-await-in-loop": 2,

		"react/jsx-filename-extension": 0,
		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"],
		"react/jsx-max-props-per-line": 0,
		"react/jsx-no-bind": 0,
		"react/jsx-sort-props": 0,
		"react/jsx-space-before-closing": [2, "never"],
		"react/no-set-state": 0,
		"react/prefer-stateless-function": 0,
		"react/prop-types": 0,
		"react/require-optimization": 0,
		"react/sort-prop-types": 0,

		"no-useless-assign/no-useless-assign": 2,

		"consistent-return-legacy/consistent-return": 2,

		"prefer-bind-operator/prefer-bind-operator": 2,

		"prefer-spread/prefer-object-spread": 2,

		//"sort-imports-es6/sort-imports-es6": [2, { "memberSyntaxSortOrder": ["none", "single", "all", "multiple"] }],

		"filenames/match-regex": 0,
		"filenames/match-exported": 2,
		"filenames/no-index": 0,

		"import/no-unresolved": 2,
		"import/named": 2,
		"import/default": 2,
		"import/namespace": 2,
		"import/export": 2,
		"import/no-named-as-default": 2,
		"import/no-commonjs": 2,
		"import/no-amd": 2,
		"import/imports-first": 2,
		"import/no-duplicates": 2,

		"no-bitwise": 0,
		"no-confusing-arrow": 0,
		"no-empty-function": [2, { "allow": ["arrowFunctions", "methods"] }],
		"no-extra-parens": [2, "functions"], // "all" conflicts with no-return-assign and some other rules, unfortunately
		"no-implicit-coercion": [2, { "boolean": false }],
		"no-inline-comments": 0,
		"no-inner-declarations": 0, // ES6 has block-scoped functions
		"no-invalid-this": 0,
		"linebreak-style": 0,
		"no-plusplus": 0,
		"no-process-env": 0,
		"no-process-exit": 0,
		"no-prototype-builtins": 0,
		"no-restricted-imports": 0,
		"no-restricted-modules": 0,
		"no-restricted-syntax": [2, "ForStatement"], // use for..of or Array.prototype methods
		"no-shadow": 0,
		"no-sync": 0,
		"no-tabs": 0,
		"no-ternary": 0,
		"no-underscore-dangle": 0,
		"no-use-before-define": [2, "nofunc"],
		"no-magic-numbers": 0,

		"array-bracket-spacing": 0, // see babel/array-bracket-spacing
		"array-callback-return": 0,
		"arrow-parens": 0, // see babel/arrow-parens
		"brace-style": [2, "1tbs", { "allowSingleLine": true }],
		"callback-return": 0,
		"comma-dangle": [2, "always-multiline"],
		"consistent-return": 0, // see consistent-return-legacy/consistent-return-legacy
		"consistent-this": [2, "this"], // do not alias `this`, use arrow functions
		"curly": [2, "multi-line"],
		"dot-location": [2, "property"],
		"func-style": [2, "declaration"],
		"generator-star-spacing": 0, // see babel/generator-star-spacing
		"id-length": 0,
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"init-declarations": 0,
		"lines-around-comment": [2, { "allowBlockStart": true }],
		"max-depth": 0,
		"max-len": 0,
		"max-lines": 0,
		"max-nested-callbacks": [2, 5],
		"max-params": 0,
		"max-statements": 0,
		"multiline-ternary": 0,
		"new-cap": 0, // see babel/new-cap
		"newline-after-var": [0, "never"],
		"newline-before-return": 0,
		"newline-per-chained-call": 0,
		"object-curly-newline": 0,
		"object-curly-spacing": 0, // see babel/object-curly-spacing
		"object-property-newline": [2, { "allowMultiplePropertiesPerLine": true }],
		"object-shorthand": 0, // see babel/object-shorthand
		"one-var": [2, { "initialized": "never" }],
		"one-var-declaration-per-line": [2, "initializations"],
		"operator-assignment": [2, "always"],
		"operator-linebreak": [2, "after"],
		"padded-blocks": [2, "never"],
		"prefer-reflect": [2, { "exceptions": ["getOwnPropertyNames"] }],
		"quote-props": [2, "as-needed"],
		"quotes": [2, "single"],
		"id-match": 0,
		"id-blacklist": 0,
		"require-jsdoc": 0,
		"sort-vars": 0,
		"sort-imports": 0, // see sort-imports-es6/sort-imports-es6
		"space-before-function-paren": [2, "never"],
		"strict": [2, "never"], // Babel inserts it for us
		"valid-jsdoc": [2, { "requireParamDescription": false, "prefer": { "return": "returns" } }],
		"vars-on-top": 0,
		"wrap-iife": [2, "inside"]
	}
}
